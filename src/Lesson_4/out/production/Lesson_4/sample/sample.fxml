            GridPane.rowIndex="2"
            GridPane.columnIndex="1"
            onAction="#clickBtnSand"/>

    <TextArea fx:id="textArea"
              GridPane.rowIndex="1"
              GridPane.columnIndex="0"
              prefWidth="300"/>
    <TextField fx:id="textField"
               promptText="place for ur AD"
               GridPane.rowIndex="2"
               GridPane.columnIndex="0"
               prefWidth="300"
